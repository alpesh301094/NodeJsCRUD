<div class="container">
<h2>{{title}}</h2
<hr>
<div class="row">
	<div class="col-md-6">
	<form method="post" action="/product/update-data">
		<div class="form-group">
			<input type="text" name="name" placeholder="Enter Name" value="{{products.name}}">
			<input type="hidden" name="id" value="{{products.student_id}}">
		</div>
		<div class="form-group">
			<input type="text" name="email" placeholder="Enter Email" value="{{products.email}}">
		</div>
		<div class="form-group">
			<input type="text" name="phone" placeholder="Enter Phone" value="{{products.phone}}">
		</div>
		<div class="form-group">
			<input type="submit" class="btn btn-success" value="Save Data">
		</div>
	</form>
	</div>
</div>
</div>
